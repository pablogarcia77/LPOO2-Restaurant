<Window x:Class="Vistas.NuevoArticulo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Articulo" Height="320" Width="316" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Estilos/Estilos.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Height="281">
        <Label Content="Codigo" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="lblCodigo" VerticalAlignment="Top" />
        <Label Content="Descripcion" Height="28" HorizontalAlignment="Left" Margin="12,46,0,0" Name="lblDescrip" VerticalAlignment="Top" />
        <Label Content="Familia" Height="28" HorizontalAlignment="Left" Margin="12,80,0,0" Name="lblFamilia" VerticalAlignment="Top" />
        <Label Content="Unidad de Medida" Height="28" HorizontalAlignment="Left" Margin="12,114,0,0" Name="lblUM" VerticalAlignment="Top" />
        <Label Content="Precio" Height="28" HorizontalAlignment="Left" Margin="12,148,0,0" Name="lblPrecio" VerticalAlignment="Top" />
        <Label Content="Stock" Height="28" HorizontalAlignment="Left" Margin="12,182,0,0" Name="lblStock" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="162,12,0,0" Name="txtCodigo" VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="162,46,0,0" Name="txtdescrip" VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="162,80,0,0" Name="txtFamilia" VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="162,114,0,0" Name="txtUM" VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="162,148,0,0" Name="txtPrecio" VerticalAlignment="Top" Width="120" />
        <CheckBox Content="" Height="16" HorizontalAlignment="Left" Margin="162,188,0,0" Name="checkBox1" VerticalAlignment="Top" />
        <Button Content="Agregar" Height="35" HorizontalAlignment="Left" Margin="12,229,0,0" Name="btnAgregar" VerticalAlignment="Top" Width="123" Click="button1_Click" Style="{StaticResource ResourceKey=btn_plantilla_aceptar}" />
        <Button Content="Cancelar" Height="35" HorizontalAlignment="Left" Margin="159,229,0,0" Name="btnCancelar" VerticalAlignment="Top" Width="123" Click="btnCancelar_Click" Style="{StaticResource ResourceKey=btn_plantilla_cancelar}" />
    </Grid>
</Window>

    