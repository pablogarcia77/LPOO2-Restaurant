<UserControl x:Class="Vistas.ControlUsuario.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:control="clr-namespace:Vistas.ControlUsuario"
             mc:Ignorable="d" 
             d:DesignHeight="251" d:DesignWidth="393"
             Loaded="Window_Loaded">
    <Grid Height="194">
        
        <Label Content="Usuario" Height="29" HorizontalAlignment="Right" Margin="0,68,232,0" Name="lblUsuario" VerticalAlignment="Top" Width="126" Foreground="White" BorderBrush="Black" FontWeight="Bold" />
